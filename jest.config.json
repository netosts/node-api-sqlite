{
  "testEnvironment": "node",
  "testMatch": [
    "**/src/tests/**/*.test.js",
    "**/src/tests/**/*.spec.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/config/database.js",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/src/tests/setup.js"
  ],
  "testTimeout": 10000,
  "verbose": true
}